{
    "name": "vireo/framework",
    "description": "Modern PHP framework implementing Vertical Slice Architecture with Inertia.js integration. Zero external dependencies, auto-discovery, and built-in RBAC.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "framework",
        "php",
        "vertical-slice",
        "vsa",
        "inertia",
        "react",
        "vue",
        "svelte",
        "minimal",
        "rbac"
    ],
    "homepage": "https://github.com/mrzh4s/vireo-framework",
    "authors": [
        {
            "name": "mrzh4s",
            "email": "mrzh4s@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/mrzh4s/vireo-framework/issues",
        "source": "https://github.com/mrzh4s/vireo-framework",
        "docs": "https://github.com/mrzh4s/vireo-framework#readme"
    },
    "require": {
        "php": "^8.4",
        "symfony/mailer": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Vireo\\Framework\\": "src/"
        },
        "files": [
            "src/Helpers/env.php",
            "src/Helpers/config.php",
            "src/Helpers/cache.php",
            "src/Helpers/session.php",
            "src/Helpers/cookie.php",
            "src/Helpers/security.php",
            "src/Helpers/validation.php",
            "src/Helpers/db.php",
            "src/Helpers/storage.php",
            "src/Helpers/orm.php",
            "src/Helpers/schema.php",
            "src/Helpers/migration.php",
            "src/Helpers/permission.php",
            "src/Helpers/logging.php",
            "src/Helpers/http.php",
            "src/Helpers/router.php",
            "src/Helpers/view.php",
            "src/Helpers/inertia.php",
            "src/Helpers/debug.php",
            "src/Helpers/cli.php",
            "src/Helpers/email.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Vireo\\Framework\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    }
}
